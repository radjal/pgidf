<!-- admin --> 
{# Admin block #} 
{% if auth_user().hasRole('admin') %}  
    <div class="adminbox" style="background-color: #676767;">
        <div class="container">
            <div class="row">
                <div class="footer-col col-md-4">
                    <h3>Dev menu</h3> 
                    {{ menu('dev').listClass('list list-unstyled').cache({'namespace': 'user'}).render()|raw }}  
                    <p>
                        {% if page.id %}
                            <br><a class="" href="{{ url_to("admin/pages/edit") }}/{{ page.id }}">Edit page</a>
                        {% endif %} 
                        <br><a class="" href="/admin">Admin</a>
                        
                    </p> 
                </div> 
                <div class="footer-col col-md-8">
            {{ structure()
            .linkAttributesDropdown({'data-toggle': 'dropdown'})
            .listClass('nav navbar-nav navbar-right')
            .childListClass('dropdown-menu')
            .cache({'namespace': 'user'})
            .render()|raw }}
            <ul>
                 <li>
                    <a href="{{ url_route('anomaly.module.posts::posts.index') }}">Posts</a>
                </li> 
            </ul>
                </div> 
            </div>
        </div>
    </div> 
{% endif %}